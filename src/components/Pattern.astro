---
interface Props {
  title: string;
  date: Date;
  mode?: "post" | "list";
}

import Author from "./Author.astro";
import FormattedDate from "./FormattedDate.astro";
const { title, mode, date } = Astro.props;

const className =
  "text-[3rem] font-bold text-monsoon-200 leading-tight text-center text-balance";
---

<div
  class:list={[
    "bg-[url('/pattern.png')] bg-cover overflow-hidden",
    mode === "post" ? "-mt-10" : "aspect-video rounded-xl",
  ]}
>
  <div
    class:list={[
      "bg-gradient-to-b from-siren-800/40 to-siren-950/90 bg-opacity-10 w-full h-full flex flex-col justify-end items-center p-10",
      mode === "post" ? "pt-[10rem]" : "",
    ]}
  >
    <div class="space-y-3 flex flex-col items-center max-w-screen-lg">
      {
        mode === "post" ? (
          <h1 class={className}>{title}</h1>
        ) : (
          <h3 class={className}>{title}</h3>
        )
      }

      <div class="text-monsoon-300">
        <Author prefix="Published by" />
      </div>

      <div class="text-monsoon-300">
        <FormattedDate date={date} />
      </div>
    </div>
  </div>
</div>
